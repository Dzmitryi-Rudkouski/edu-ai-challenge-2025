{
  "name": "seabattle-refactored",
  "version": "1.0.0",
  "description": "Рефакторинг игры Морской бой с улучшенной архитектурой и тестированием",
  "type": "module",
  "main": "seabattle.js",
  "scripts": {
    "start": "node seabattle.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["game", "battleship", "refactoring", "mvc"],
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "models/**/*.js",
      "controllers/**/*.js"
    ],
    "coverageDirectory": "docs/coverage"
  }
} 